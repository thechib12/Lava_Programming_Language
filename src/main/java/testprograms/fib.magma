chamber fib {
    /^\ Created by Rogier on 15-06-16 in Enschede.
    rupture rock fib (rock $n){
        if ($n == 0) then {
            return 0;
        } else if ($n == 1) then {
            return 1;
        } else {
            return fib($n - 1) + fib($n - 2);
        }
    }


    erupt() {
        rock $answer = fib(10);
    }
}